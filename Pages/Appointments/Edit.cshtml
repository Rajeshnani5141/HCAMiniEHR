@page
@model HCAMiniEHR.Pages.Appointments.EditModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<h1>Edit Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            
            <div class="mb-3">
                <label asp-for="Appointment.PatientId" class="form-label">Patient</label>
                <select asp-for="Appointment.PatientId" class="form-select" asp-items="Model.PatientList">
                    <option value="">-- Select Patient --</option>
                </select>
                <span asp-validation-for="Appointment.PatientId" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Appointment.DoctorId" class="form-label">Doctor</label>
                <select asp-for="Appointment.DoctorId" class="form-select" asp-items="Model.DoctorList">
                    <option value="">-- Select Doctor --</option>
                </select>
                <span asp-validation-for="Appointment.DoctorId" class="text-danger"></span>
            </div>
             <!-- Keep DoctorName hidden, updated in backend -->
            <input type="hidden" asp-for="Appointment.DoctorName" />

            <div class="mb-3">
                <label asp-for="Appointment.AppointmentDate" class="form-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Appointment.Reason" class="form-label"></label>
                <textarea asp-for="Appointment.Reason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Appointment.Status" class="form-label"></label>
                <select asp-for="Appointment.Status" class="form-select">
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
