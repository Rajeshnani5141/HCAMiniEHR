@page
@model HCAMiniEHR.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Appointment.AppointmentDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Appointment.AppointmentDate)</dd>
        
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Appointment.Patient.FirstName @Model.Appointment.Patient.LastName</dd>
        
        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Appointment.DoctorName)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Appointment.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Appointment.Status)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Appointment.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
