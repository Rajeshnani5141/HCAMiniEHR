@page
@model HCAMiniEHR.Pages.LabOrders.DeleteModel
@{
    ViewData["Title"] = "Delete Lab Order";
}

<h1>Delete Lab Order</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lab Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LabOrder.TestName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LabOrder.TestName)</dd>
        
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">
            @if(Model.LabOrder.Appointment?.Patient != null)
            {
                 @Model.LabOrder.Appointment.Patient.FirstName @Model.LabOrder.Appointment.Patient.LastName
            }
        </dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LabOrder.OrderDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LabOrder.OrderDate)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LabOrder.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LabOrder.Status)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="LabOrder.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
