@page
@model HCAMiniEHR.Pages.Doctors.DeleteModel
@{
    ViewData["Title"] = "Delete Doctor";
}

<h1>Delete Doctor</h1>

<h3 class="text-danger">Are you sure you want to delete this doctor?</h3>
<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Doctor.FirstName</dd>
        
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Doctor.LastName</dd>
        
        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Doctor.Specialization</dd>
    </dl>
    
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">
        <input type="hidden" asp-for="Doctor.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
