<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HCA MiniEHR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <a href="/" class="sidebar-brand">
                HCA<span>MiniEHR</span>
            </a>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Patients/Index">Patients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Appointments/Index">Appointments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/LabOrders/Index">Lab Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Doctors/Index">Doctors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Reports/Index">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Admin/AuditLogs">🛡️ Security Logs</a>
                </li>
            </ul>
        </nav>

        <!-- Main Workspace -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
