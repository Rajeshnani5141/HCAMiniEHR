@page
@model HCAMiniEHR.Pages.Patients.DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<h1>Delete Patient</h1>

<h3>Are you sure you want to delete this patient?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patient.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.FirstName)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patient.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.LastName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Patient.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Patient.Email)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Patient.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
