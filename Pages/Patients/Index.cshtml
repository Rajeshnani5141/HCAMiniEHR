@page
@model HCAMiniEHR.Pages.Patients.IndexModel
@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Patient</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.FirstName @patient.LastName</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>@patient.Email</td>
                <td>@patient.PhoneNumber</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
