@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard Overview</h2>

<div class="dashboard-grid">
    <div class="stat-box">
        <div class="stat-title">Total Patients</div>
        <div class="stat-value">@Model.PatientCount</div>
    </div>
    <div class="stat-box">
        <div class="stat-title">Appointments Today</div>
        <div class="stat-value">@Model.AppointmentsToday</div>
    </div>
    <div class="stat-box">
        <div class="stat-title">Active Doctors</div>
        <div class="stat-value">@Model.DoctorsCount</div>
    </div>
    <div class="stat-box">
        <div class="stat-title">Pending Labs</div>
        <div class="stat-value" style="color: #ca8a04;">@Model.PendingLabs</div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <h4>Quick Actions</h4>
            <div class="d-flex gap-3 mt-3">
                <a asp-page="/Patients/Create" class="btn btn-primary">➕ New Patient</a>
                <a asp-page="/Appointments/Create" class="btn btn-outline-primary">📅 Schedule Appointment</a>
            </div>
        </div>
    </div>
</div>

